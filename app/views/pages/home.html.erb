<div class="my-banner" style="background-image: url('<%= asset_path("barly_gb.svg") %>'); background-repeat: no-repeat; background-size: cover; background-position: center;">
  <div class="my-wrapper">

    <div class="my-logo" >
      <%= image_tag "Barly.png", class: "logo-img", width: 370 %>
    </div>

    <div class="fields">

      <form novalidate="novalidate" class="simple_form search" action="/" accept-charset="UTF-8" method="get"><input name="utf8" type="hidden" value="&#x2713;" />
        <div class="search-form-control form-group">
          <input class="form-control string required" type="text" name="search[query]" id="search_query" placeholder="What bar are you at?" />
          <button name="button" type="submit" class="btn btn-flat">
            <i class="far fa-compass"></i>
            <%# link_to "Nearby Bars", local_bars_bars_path %>
          </button>
        </div>
      </form>

      <div class="landing-question" >
        <h2></h2>
      </div>


    </div>

  </div>
</div>
